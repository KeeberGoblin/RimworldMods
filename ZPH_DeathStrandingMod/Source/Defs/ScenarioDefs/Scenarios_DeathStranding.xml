          <pawnChoiceCount>8</pawnChoiceCount>
        </li>
        <li Class="DeathStrandingMod.ScenPart_TechBackground">
          <requiredSkills>
            <li>Intellectual</li>
            <li>Crafting</li>
          </requiredSkills>
          <minSkillLevel>8</minSkillLevel>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>DeathStrandingMod_ChiralNetworkNode</thingDef>
          <count>1</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>DeathStrandingMod_ChiralCommunicator</thingDef>
          <count>2</count>
        </li>
        <li Class="ScenPart_StartingThing