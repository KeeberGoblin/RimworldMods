  <!-- ==================== DEATH STRANDING SCENARIOS ==================== -->
  
  <!-- Lost Porter -->
  <ScenarioDef>
    <defName>LostPorter</defName>
    <label>Lost Porter</label>
    <description>Your equipment has failed in the wasteland, leaving you stranded far from any settlement. With only basic supplies and degraded gear, you must establish a new outpost while avoiding the supernatural dangers that lurk in the post-apocalyptic landscape.\n\nSimilar to naked brutality, but with a Death Stranding twist - you start with some porter equipment that's on the verge of breaking down.</description>
    <scenario>
      <summary>A single porter stranded with failing equipment.</summary>
      <playerFaction>
        <def>PlayerFaction</def>
        <factionDef>PlayerColony</factionDef>
      </playerFaction>
      <parts>
        <li Class="ScenPart_ConfigPage_ConfigureStartingPawns">
          <def>ConfigPage_ConfigureStartingPawns</def>
          <pawnCount>1</pawnCount>
          <pawnChoiceCount>8</pawnChoiceCount>
        </li>
        <li Class="DeathStrandingMod.ScenPart_ForcedTrait">
          <def>ForcedTrait</def>
          <trait>DOOMS</trait>
          <degree>1</degree>
          <chance>0.6</chance>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>DeathStrandingMod_ChiralProcessor</thingDef>
          <count>3</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>ComponentAdvanced</thingDef>
          <count>20</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Steel</thingDef>
          <count>300</count>
        </li>
        <li Class="ScenPart_StartingThing_Defined">
          <def>StartingThing_Defined</def>
          <thingDef>Plasteel</thingDef>
          <count>100</count>
        </li>
        <li Class="DeathStrandingMod.ScenPart_DimensionalInterference">
          <interferenceLevel>High</interferenceLevel>
          <equipmentMalfunctionChance>0.3</equipmentMalfunctionChance>
        </li>
        <li Class="DeathStrandingMod.ScenPart_NetworkObjectives">
          <connectionQuota>5</connectionQuota>
          <dataTransmissionGoals>true</dataTransmissionGoals>
        </li>
      </parts>
    </scenario>
  </ScenarioDef>

