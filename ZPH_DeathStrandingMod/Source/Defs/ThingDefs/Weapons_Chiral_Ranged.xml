<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================== CHIRAL RANGED WEAPONS ==================== -->
  
  <!-- Chiral Enhanced Rifle -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>ChiralRifle</defName>
    <label>chiral rifle</label>
    <description>A precision rifle enhanced with chiral technology. The weapon can fire specialized ammunition that exists partially in the Beach dimension, making it highly effective against supernatural entities. The rifle's scope is attuned to detect dimensional anomalies.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ChiralRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconPath>Things/Item/Equipment/WeaponRanged/ChiralRifle</uiIconPath>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <Mass>4.2</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.85</AccuracyShort>
      <AccuracyMedium>0.95</AccuracyMedium>
      <AccuracyLong>0.88</AccuracyLong>
      <RangedWeapon_Cooldown>1.8</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
      <ChiralAlloy>12</ChiralAlloy>
      <ChiralCrystal>5</ChiralCrystal>
    </costList>
    <recipeMaker>
      <researchPrerequisite>ChiralWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ChiralRifle</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>45</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
    <weaponTags>
      <li>ChiralWeapon</li>
      <li>LongShots</li>
    </weaponTags>
  </ThingDef>

  <!-- Chiral Pistol -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>ChiralPistol</defName>
    <label>chiral pistol</label>
    <description>A compact sidearm infused with chiral energy. While less powerful than larger chiral weapons, it's highly effective at close range and can disrupt supernatural entities. The weapon glows faintly with otherworldly energy.</description>
    <techLevel>Spacer</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/ChiralPistol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconPath>Things/Item/Equipment/WeaponRanged/ChiralPistol</uiIconPath>
    <soundInteract>Interact_Autopistol</soundInteract>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <Mass>1.8</Mass>
      <AccuracyTouch>0.88</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.60</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>1.2</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ChiralAlloy>6</ChiralAlloy>
      <ChiralCrystal>3</ChiralCrystal>
    </costList>
    <recipeMaker>
      <researchPrerequisite>ChiralWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_ChiralPistol</defaultProjectile>
        <warmupTime>0.6</warmupTime>
        <range>28</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
    <weaponTags>
      <li>ChiralWeapon</li>
      <li>SimpleGun</li>
    </weaponTags>
  </ThingDef>

  <!-- Temporal Disruptor -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>TemporalDisruptor</defName>
    <label>temporal disruptor</label>
    <description>An experimental weapon that fires concentrated temporal energy. The disruptor can slow, age, or even phase targets out of normal time. Highly effective against BTs and other dimensional entities, but requires significant power and expertise to operate.</description>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/TemporalDisruptor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconPath>Things/Item/Equipment/WeaponRanged/TemporalDisruptor</uiIconPath>
    <soundInteract>Interact_ChargeRifle</soundInteract>
    <statBases>
      <WorkToMake>80000</WorkToMake>
      <Mass>5.5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.85</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>80</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
      <ComponentSpacer>8</ComponentSpacer>
      <ChiralAlloy>20</ChiralAlloy>
      <BeachMatter>5</BeachMatter>
      <QuantumEntanglementDevice>2</QuantumEntanglementDevice>
    </costList>
    <recipeMaker>
      <researchPrerequisite>TemporalWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
        <Intellectual>8</Intellectual>
      </skillRequirements>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>DeathStrandingMod.Verbs.Verb_ShootTemporal</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Projectile_TemporalDisruptor</defaultProjectile>
        <warmupTime>2.0</warmupTime>
        <range>35</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>12</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2.0</cooldownTime>
      </li>
    </tools>
    <weaponTags>
      <li>ChiralWeapon</li>
      <li>TemporalWeapon</li>
    </weaponTags>
    <comps>
      <li Class="CompProperties_Reloadable">
        <maxCharges>8</maxCharges>
        <ammoDef>ChiralCrystal</ammoDef>
        <ammoCountPerCharge>2</ammoCountPerCharge>
        <baseReloadTicks>180</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <chargeNoun>charge</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
  </ThingDef>

  <!-- Reality Stabilizer Weapon -->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>RealityStabilizer</defName>
    <label>reality stabilizer</label>
    <description>A specialized device that projects reality-stabilizing fields. While not a traditional weapon, it can force dimensional entities back to their home dimension and prevent reality distortion in the surrounding area. Essential equipment for dealing with severe Beach incursions.</description>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/RealityStabilizer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <uiIconPath>Things/Item/Equipment/WeaponRanged/RealityStabilizer</uiIconPath>
    <soundInteract>Interact_PsychicLance</soundInteract>
    <statBases>
      <WorkToMake>100000</WorkToMake>
      <Mass>6.0</Mass>
      <AccuracyTouch>0.95</AccuracyTouch>
      <AccuracyShort>0.95</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.80</AccuracyLong>
      <RangedWeapon_Cooldown>3.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>100</Steel>
      <ComponentSpacer>12</ComponentSpacer>
      <ChiralAlloy>25</ChiralAlloy>
      <BeachMatter>8</BeachMatter>
      <QuantumEntanglementDevice>3</QuantumEntanglementDevice>
    </costList>
    <recipeMaker>
      <researchPrerequisite>RealityManipulation</researchPrerequisite>
      <skillRequirements>
        <Crafting>15</Crafting>
        <Intellectual>12</Intellectual>
      </skillRequirements>
      <recipeUsers>
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>DeathStrandingMod.Verbs.Verb_RealityStabilize</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Projectile_RealityStabilizer</defaultProjectile>
        <warmupTime>3.0</warmupTime>
        <range>25</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_PsychicLance</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>15</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
          <canTargetPawns>true</canTargetPawns>
          <canTargetBuildings>false</canTargetBuildings>
        </targetParams>
      </li>
    </verbs>
    <weaponTags>
      <li>ChiralWeapon</li>
      <li>RealityWeapon</li>
    </weaponTags>
    <comps>
      <li Class="CompProperties_Reloadable">
        <maxCharges>5</maxCharges>
        <ammoDef>BeachMatter</ammoDef>
        <ammoCountPerCharge>1</ammoCountPerCharge>
        <baseReloadTicks>300</baseReloadTicks>
        <soundReload>Standard_Reload</soundReload>
        <hotKey>Misc4</hotKey>
        <chargeNoun>stabilization</chargeNoun>
        <displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
      </li>
    </comps>
  </ThingDef>

</Defs>