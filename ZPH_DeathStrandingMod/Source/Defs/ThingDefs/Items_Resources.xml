<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- ==================== CHIRAL CRYSTALS ==================== -->
  
  <ThingDef ParentName="ResourceBase">
    <defName>ChiralCrystal</defName>
    <label>chiral crystal</label>
    <description>A crystalline structure formed from concentrated chiral matter. These crystals contain traces of the Beach dimension and are essential for building chiral network infrastructure. They emit a faint otherworldly glow and feel cold to the touch.</description>
    <graphicData>
      <texPath>Things/Item/Resource/ChiralCrystal</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <stackLimit>75</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>12</MarketValue>
      <Mass>0.8</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <minRewardCount>10</minRewardCount>
    <deepCommonality>0.3</deepCommonality>
    <deepCountPerPortion>4</deepCountPerPortion>
    <deepLumpSizeRange>2~8</deepLumpSizeRange>
  </ThingDef>

  <!-- ==================== CHIRAL ALLOY ==================== -->
  
  <ThingDef ParentName="ResourceBase">
    <defName>ChiralAlloy</defName>
    <label>chiral alloy</label>
    <description>An advanced metallic alloy infused with chiral matter. This material exhibits unusual properties, appearing to exist partially in both normal space and the Beach dimension. Essential for constructing advanced chiral technology.</description>
    <graphicData>
      <texPath>Things/Item/Resource/ChiralAlloy</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <stackLimit>75</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>25</MarketValue>
      <Mass>1.2</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>0.3</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>true</smeltable>
    <smeltProducts>
      <ChiralCrystal>3</ChiralCrystal>
      <Steel>2</Steel>
    </smeltProducts>
  </ThingDef>

  <!-- ==================== TIMEFALL RESIDUE ==================== -->
  
  <ThingDef ParentName="ResourceBase">
    <defName>TimefallResidue</defName>
    <label>timefall residue</label>
    <description>A viscous, dark substance left behind after timefall events. This residue contains temporal anomalies and can be processed into useful materials, though handling it requires care due to its aging effects.</description>
    <graphicData>
      <texPath>Things/Item/Resource/TimefallResidue</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Standard_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>25</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <MarketValue>8</MarketValue>
      <Mass>0.5</Mass>
      <Flammability>0.2</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>15</daysToRotStart>
        <daysToDessicated>30</daysToDessicated>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>

