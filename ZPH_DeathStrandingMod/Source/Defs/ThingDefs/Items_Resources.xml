  <!-- ==================== RECIPE DEFINITIONS ==================== -->
  
  <RecipeDef>
    <defName>MakeChiralAlloy</defName>
    <label>make chiral alloy</label>
    <description>Process chiral crystals with steel to create chiral alloy.</description>
    <jobString>Making chiral alloy.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workAmount>1600</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ChiralCrystal</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <ChiralAlloy>2</ChiralAlloy>
    </products>
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>ElectricSmelter</li>
      <li>FueledSmelter</li>
    </recipeUsers>
    <researchPrerequisite>ChiralTechnology</researchPrerequisite>
  </RecipeDef>

